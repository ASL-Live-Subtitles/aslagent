  "components": {
    "schemas": {
      "ExpressionRuleBase": {
        "required": [
          "emotion",
          "intent",
          "punctuation_adjustment",
          "tts_tone"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "emotion": {
            "type": "string",
            "example": "frustrated"
          },
          "intent": {
            "type": "string",
            "example": "question"
          },
          "punctuation_adjustment": {
            "type": "string",
            "example": "add question mark"
          },
          "tts_tone": {
            "type": "string",
            "example": "curious"
          },
          "confidence_threshold": {
            "type": "number",
            "format": "float",
            "example": 0.85
          }
        }
      },
      "ExpressionRuleCreate": {
        "allOf": [
          {
            "$ref": "#/components/schemas/ExpressionRuleBase"
          }
        ]
      },
      "ExpressionRuleRead": {
        "allOf": [
          {
            "$ref": "#/components/schemas/ExpressionRuleBase"
          },
          {
            "type": "object",
            "properties": {
              "created_at": {
                "type": "string",
                "format": "date-time"
              },
              "updated_at": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        ]
      },
      "ExpressionRuleUpdate": {
        "type": "object",
        "properties": {
          "emotion": {
            "type": "string",
            "example": "neutral"
          },
          "intent": {
            "type": "string",
            "example": "statement"
          },
          "punctuation_adjustment": {
            "type": "string",
            "example": "add period"
          },
          "tts_tone": {
            "type": "string",
            "example": "soft"
          },
          "confidence_threshold": {
            "type": "number",
            "format": "float",
            "example": 0.75
          }
        }
      },
      "TranslationSessionBase": {
        "required": [
          "adjusted_text",
          "detected_emotion",
          "detected_intent",
          "input_text",
          "tts_metadata"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "input_text": {
            "type": "string",
            "example": "What time is it"
          },
          "detected_emotion": {
            "type": "string",
            "example": "frustrated"
          },
          "detected_intent": {
            "type": "string",
            "example": "question"
          },
          "adjusted_text": {
            "type": "string",
            "example": "What time is it?"
          },
          "tts_metadata": {
            "type": "object",
            "example": {
              "tone": "soft",
              "pitch": "low"
            }
          }
        }
      },
      "TranslationSessionCreate": {
        "allOf": [
          {
            "$ref": "#/components/schemas/TranslationSessionBase"
          }
        ]
      },
      "TranslationSessionRead": {
        "allOf": [
          {
            "$ref": "#/components/schemas/TranslationSessionBase"
          },
          {
            "type": "object",
            "properties": {
              "created_at": {
                "type": "string",
                "format": "date-time"
              },
              "updated_at": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        ]
      },
      "TranslationSessionUpdate": {
        "type": "object",
        "properties": {
          "adjusted_text": {
            "type": "string",
            "example": "What time is it?"
          },
          "tts_metadata": {
            "type": "object",
            "example": {
              "tone": "neutral",
              "pitch": "medium"
            }
          }
        }
      }
    }
  }
}