      "put": {
        "tags": [
          "TranslationSession"
        ],
        "summary": "Update an TranslationSession record",
        "parameters": [
          {
            "name": "session_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TranslationSessionUpdate"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "TranslationSession updated"
