  "tags": [
    {
      "name": "ExpressionRule",
      "description": "Operations for managing emotionâ€“intent mapping rules"
    },
    {
      "name": "TranslationSession",
      "description": "Operations for processing ASL model outputs and generating expressive metadata"
    }
  ],
  "paths": {
    "/expression_rules": {
      "get": {
        "tags": [
          "ExpressionRule"
        ],
        "summary": "List all ExpressionRule rules",
        "parameters": [
          {
            "name": "emotion",
            "in": "query",
            "description": "Filter by emotion",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "intent",
            "in": "query",
            "description": "Filter by intent",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of ExpressionRule objects",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ExpressionRuleRead"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "ExpressionRule"
        ],
        "summary": "Create a new ExpressionRule rule",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ExpressionRuleCreate"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "ExpressionRule created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ExpressionRuleRead"
                }
              }
            }
          }
        }
      }
    },
    "/expression_rules/{analysis_id}": {
      "get": {
        "tags": [
          "ExpressionRule"
        ],
        "summary": "Get a specific ExpressionRule rule",
        "parameters": [
          {
            "name": "analysis_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The requested ExpressionRule",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ExpressionRuleRead"
                }
              }
            }
          },
          "404": {
            "description": "ExpressionRule not found"
          }
        }
      },
      "put": {
        "tags": [
          "ExpressionRule"
        ],
        "summary": "Update an existing ExpressionRule rule",
        "parameters": [
          {
            "name": "analysis_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ExpressionRuleUpdate"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "ExpressionRule updated"
          },
          "404": {
            "description": "ExpressionRule not found"
          }
        }
      },
      "delete": {
        "tags": [
          "ExpressionRule"
        ],
        "summary": "Delete an ExpressionRule rule",
        "parameters": [
          {
            "name": "analysis_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "ExpressionRule deleted"
          },
          "404": {
            "description": "ExpressionRule not found"
          }
        }
      }
    },
    "/translation_sessions": {
      "get": {
        "tags": [
          "TranslationSession"
        ],
        "summary": "List all TranslationSession records",
        "parameters": [
          {
            "name": "detected_emotion",
            "in": "query",
            "description": "Filter by detected emotion",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "detected_intent",
            "in": "query",
            "description": "Filter by detected intent",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of TranslationSession objects",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/TranslationSessionRead"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "TranslationSession"
        ],
        "summary": "Create a new TranslationSession record",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TranslationSessionCreate"
              }
            }
          },
          "required": true
