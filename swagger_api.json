  "tags": [
    {
      "name": "EmotionAnalysis",
      "description": "Operations for managing emotionâ€“intent mapping rules"
    },
    {
      "name": "AgentSession",
      "description": "Operations for processing ASL model outputs and generating expressive metadata"
    }
  ],
  "paths": {
    "/emotion_analyses": {
      "get": {
        "tags": [
          "EmotionAnalysis"
        ],
        "summary": "List all EmotionAnalysis rules",
        "parameters": [
          {
            "name": "emotion",
            "in": "query",
            "description": "Filter by emotion",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "intent",
            "in": "query",
            "description": "Filter by intent",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of EmotionAnalysis objects",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/EmotionAnalysisRead"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "EmotionAnalysis"
        ],
        "summary": "Create a new EmotionAnalysis rule",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EmotionAnalysisCreate"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "EmotionAnalysis created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EmotionAnalysisRead"
                }
              }
            }
          }
        }
      }
    },
    "/emotion_analyses/{analysis_id}": {
      "get": {
        "tags": [
          "EmotionAnalysis"
        ],
        "summary": "Get a specific EmotionAnalysis rule",
        "parameters": [
          {
            "name": "analysis_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The requested EmotionAnalysis",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EmotionAnalysisRead"
                }
              }
            }
          },
          "404": {
            "description": "EmotionAnalysis not found"
          }
        }
      },
      "put": {
        "tags": [
          "EmotionAnalysis"
        ],
        "summary": "Update an existing EmotionAnalysis rule",
        "parameters": [
          {
            "name": "analysis_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EmotionAnalysisUpdate"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "EmotionAnalysis updated"
          },
          "404": {
            "description": "EmotionAnalysis not found"
          }
        }
      },
      "delete": {
        "tags": [
          "EmotionAnalysis"
        ],
        "summary": "Delete an EmotionAnalysis rule",
        "parameters": [
          {
            "name": "analysis_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "EmotionAnalysis deleted"
          },
          "404": {
            "description": "EmotionAnalysis not found"
          }
        }
      }
    },
    "/agent_sessions": {
      "get": {
        "tags": [
          "AgentSession"
        ],
        "summary": "List all AgentSession records",
        "parameters": [
          {
            "name": "detected_emotion",
            "in": "query",
            "description": "Filter by detected emotion",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "detected_intent",
            "in": "query",
            "description": "Filter by detected intent",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of AgentSession objects",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/AgentSessionRead"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "AgentSession"
        ],
        "summary": "Create a new AgentSession record",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AgentSessionCreate"
              }
            }
          },
          "required": true
        },
        "responses": {
          "201": {
            "description": "AgentSession created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AgentSessionRead"
                }
              }
            }
          }
        }
      }
    },
    "/agent_sessions/{session_id}": {
      "get": {
        "tags": [
          "AgentSession"
        ],
        "summary": "Get an AgentSession record",
        "parameters": [
          {
            "name": "session_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The requested AgentSession",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AgentSessionRead"
                }
              }
            }
          },
          "404": {
            "description": "AgentSession not found"
          }
        }
      },
      "put": {
        "tags": [
          "AgentSession"
        ],
        "summary": "Update an AgentSession record",
        "parameters": [
          {
            "name": "session_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AgentSessionUpdate"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "AgentSession updated"
          },
          "404": {
            "description": "AgentSession not found"
          }
        }
      },
      "delete": {
        "tags": [
          "AgentSession"
        ],
        "summary": "Delete an AgentSession record",
        "parameters": [
          {
            "name": "session_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
